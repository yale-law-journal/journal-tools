{
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "block-scoped-var": "error",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "eol-last": "error",
    "prefer-arrow-callback": "error",
    "no-trailing-spaces": "error",
    "prefer-template": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "curly": ["error", "multi-line"]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  }
}
